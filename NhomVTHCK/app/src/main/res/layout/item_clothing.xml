<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:background="@android:color/white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgClothing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/input_bg"
        android:src="@drawable/aolennam" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tvClothingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áo len sọc nam nữ siêu hot"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/tvClothingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màu xám-trắng"
        android:textSize="14sp"
        android:paddingTop="4dp"/>


    <TextView
        android:id="@+id/tvClothingSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size M-XL"
        android:textSize="14sp"
        android:paddingTop="4dp"/>


    <TextView
        android:id="@+id/tvClothingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="299.000"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:paddingTop="4dp"/>

        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"/>

    </LinearLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>
